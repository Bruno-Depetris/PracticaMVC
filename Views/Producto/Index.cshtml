@model List<PracticaMVC.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}
<h1>Productos</h1>

<p>
    <a asp-controller="Producto" asp-action="Create" class="btn btn-primary">Crear nuevo producto</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver a inicio</a>
</p>
<div class="alert alert-info">
    <strong>Nota:</strong> Esta es una lista de productos. Puedes crear, editar o eliminar productos.
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.ProductoId</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-controller="Producto" asp-action="Edit" asp-route-id="@producto.ProductoId" class="btn btn-warning">Editar</a>
                    <a asp-controller="Producto" asp-action="Delete" asp-route-id="@producto.ProductoId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>